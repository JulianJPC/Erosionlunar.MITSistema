@model Erosionlunar.MITSistema.Models.PreParteFixModel

@{
    ViewData["Title"] = "PreParte Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PreParte Detalle</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.numeroPV)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numeroPV)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaRecibidoV)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaRecibidoV)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nCortoEV)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nCortoEV)
        </dd>
    </dl>
</div>
@{
    List<List<string>> laInfo = Model.nombresYMailsParaV();
}
@if(laInfo.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unaLista in laInfo)
            {
                <tr>
                    <td>@unaLista[0]</td>
                    <td>@unaLista[1]</td>
                </tr>
            }
        </tbody>
    </table>
}


else
{
    <p>No se encontraron Mails.</p>
}
<div>
    <a asp-action="PreParteEdit" asp-route-id="@Model?.idPreParteV">Editar</a> |
    <a asp-action="PreParteList">Lista</a>
</div>
